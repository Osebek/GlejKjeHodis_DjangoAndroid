
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nejcvesel.pazikjehodis.LocationDetailFragment"
    android:background="@color/white">


    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:background="@color/white">



        <TextView fontPath="fonts/Ubuntu-medium.ttf"
            android:id="@+id/locationDetailTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/darkGrey"
           />
        <TextView  fontPath="fonts/Ubuntu-light.ttf"
            android:id="@+id/locationDetailName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/darkGrey"
            android:textSize="12sp"
            />

        <ImageView
            android:id="@+id/locationDetailPicture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            />
        <TextView fontPath="fonts/Ubuntu-light.ttf"
            android:id="@+id/locationDetailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:layout_below="@id/locationDetailTitle"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:paddingTop="21dp"
        >
    <ImageView
        android:background="@drawable/ikona_prikazi_na_zemljevidu_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/location_icon"

        />
    </LinearLayout>

</FrameLayout>
    </ScrollView>
