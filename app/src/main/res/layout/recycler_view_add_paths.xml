<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:layout_marginTop="10dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:contentPadding="@dimen/cardViewMargin"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        card_view:cardCornerRadius="7dp"
        card_view:cardElevation="1dp"
        card_view:cardMaxElevation="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        card_view:contentPaddingTop="0dp"
        card_view:contentPaddingBottom="0dp"
        android:background="@color/white"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp">


            <TextView fontPath="fonts/Ubuntu-medium.ttf"
                android:id="@+id/loc_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:textSize="20sp"
                android:textColor="@color/darkGrey"
                />

            <TextView fontPath="fonts/Ubuntu-light.ttf"
                android:id="@+id/locAddress"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingLeft="3dp"
                android:paddingRight="64dp"
                android:textSize="12sp"
                android:textColor="@color/darkGrey"
                android:layout_below="@id/loc_detail_title"
                />




            <TextView fontPath="fonts/Ubuntu-light.ttf"
                android:id="@+id/latitude"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:paddingLeft="4dp"
                android:layout_below="@id/locAddress"
                android:textSize="12sp"
                android:visibility="invisible"/>

            <TextView fontPath="fonts/Ubuntu-light.ttf"
                android:id="@+id/longtitude"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:paddingLeft="2dp"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_below="@id/latitude"
                android:textSize="12sp"
                android:visibility="invisible"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/longtitude"
                />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:id="@+id/addToPathCheckbox"
                android:layout_gravity="center"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:layout_marginBottom="5dp"
                android:buttonTint="@color/vesnaRED"/>

            <TextView fontPath="fonts/Ubuntu-light.ttf"
                android:id="@+id/locIdentifier"
                android:layout_weight="0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible"/>
            <TextView fontPath="fonts/Ubuntu-light.ttf"
                android:id="@+id/locationText"
                android:layout_weight="0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible"/>

            <TextView fontPath="fonts/Ubuntu-light.ttf"
                android:id="@+id/loc_detail_name"
                android:layout_weight="0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible"/>

            <TextView fontPath="fonts/Ubuntu-light.ttf"
                android:id="@+id/picture_url"
                android:layout_weight="0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            >
            <ImageView
                android:background="@drawable/ikona_prikazi_na_zemljevidu_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/location_icon"
                android:paddingTop="7dp"
                android:paddingLeft="10dp"

                />



        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>