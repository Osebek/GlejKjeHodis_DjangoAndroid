<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:layout_marginBottom="20dp">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:contentPadding="@dimen/activity_horizontal_margin"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        card_view:cardCornerRadius="7dp"
        card_view:cardElevation="1dp"
        card_view:cardMaxElevation="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        card_view:contentPaddingTop="0dp"
        card_view:contentPaddingBottom="5dp"
        android:background="@color/white"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp">


            <TextView fontPath="fonts/Ubuntu-bold.ttf"
                android:id="@+id/loc_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:textSize="20sp"
                android:textColor="@color/black"
                />

            <TextView fontPath="fonts/Ubuntu-italic.ttf"
                android:id="@+id/loc_detail_name"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingLeft="2dp"
                android:paddingRight="64dp"
                android:textSize="15dp"
                android:layout_below="@id/loc_detail_title"
                />

            <TextView fontPath="fonts/Ubuntu-light.ttf"
                android:id="@+id/latitude"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:paddingLeft="2dp"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_below="@id/loc_detail_name"
                android:textSize="12sp"
                android:visibility="invisible"/>

            <TextView fontPath="fonts/Ubuntu-light.ttf"
                android:id="@+id/longtitude"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:paddingLeft="2dp"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_below="@id/latitude"
                android:textSize="12sp"
                android:visibility="invisible"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/longtitude"
                />
            <TextView fontPath="fonts/Ubuntu-light.ttf"
                android:id="@+id/locIdentifier"
                android:layout_weight="0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible"/>
            <TextView fontPath="fonts/Ubuntu-light.ttf"
                android:id="@+id/locationText"
                android:layout_weight="0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible"/>

            <TextView fontPath="fonts/Ubuntu-light.ttf"
                android:id="@+id/picture_url"
                android:layout_weight="0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible"/>


        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>